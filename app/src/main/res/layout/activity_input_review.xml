<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_back"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/reviewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tulis Ulasan"
                android:textAppearance="?android:attr/textAppearanceLarge"
                app:fontFamily="@font/poppinssemibold" />
        </LinearLayout>


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

            <EditText
                android:id="@+id/reviewEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:gravity="top|start"
                android:hint="Ceritakan pengalaman Anda"
                app:fontFamily="@font/poppinsregular"
                android:inputType="textMultiLine"
                android:lines="5"
                android:textSize="14sp"
                android:background="@drawable/edittext_border2" />


            <TextView
            android:id="@+id/ratingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reviewEditText"
            android:layout_marginTop="16dp"
            android:text="Berikan bintang :"
            app:fontFamily="@font/poppinsregular"/>

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ratingTextView"
                android:layout_marginTop="8dp"
                android:numStars="5"
                android:stepSize="1"
                android:progressTint="#FFC727"
                android:secondaryProgressTint="#FFC727" />

    </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnKirimReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_background"
        android:text="Kirim Review"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:fontFamily="@font/poppinssemibold"/>



</RelativeLayout>
