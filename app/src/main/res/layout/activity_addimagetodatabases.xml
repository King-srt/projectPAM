<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addimagetodatabases">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imageDestination"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:background="@drawable/border" />

            <ImageView
                android:id="@+id/imageBookmark"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@id/imageDestination"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:src="@drawable/baseline_bookmark_add_24" />

            <EditText
                android:id="@+id/editTextDestinationName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageBookmark"
                android:layout_marginTop="8dp"
                android:hint="Destination Name"
                android:inputType="text" />

            <EditText
                android:id="@+id/editTextDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextDestinationName"
                android:layout_marginTop="8dp"
                android:hint="Description"
                android:inputType="textMultiLine" />

            <EditText
                android:id="@+id/editTextCityName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextDescription"
                android:layout_marginTop="8dp"
                android:hint="City"
                android:inputType="textMultiLine" />

            <EditText
                android:id="@+id/editTextAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextCityName"
                android:layout_marginTop="8dp"
                android:hint="Alamat"
                android:inputType="textMultiLine" />

            <EditText
                android:id="@+id/editTextDescLittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextAddress"
                android:layout_marginTop="8dp"
                android:hint="Deskripsi Singkat"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/buttonAddData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextDescLittle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="Add Data" />

            <ProgressBar
                android:id="@+id/progressBarAdd"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonAddData"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp" />

        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
